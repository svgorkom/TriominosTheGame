<Window x:Class="Triominos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Triominos"
        xmlns:controls="clr-namespace:Triominos.Controls"
        xmlns:vm="clr-namespace:Triominos.ViewModels"
        xmlns:converters="clr-namespace:Triominos.Converters"
        mc:Ignorable="d"
        Title="Triominos Game" Height="800" Width="1200"
        Background="#FF2D2D30"
        WindowStartupLocation="CenterScreen"
        MouseMove="Window_MouseMove">

    <Window.DataContext>
        <vm:GameViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:NumberToRadioConverter x:Key="NumberToRadioConverter"/>
        
        <Style x:Key="GameButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF0E639C"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1177BB"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF094771"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="StartButtonStyle" TargetType="Button" BasedOn="{StaticResource GameButtonStyle}">
            <Setter Property="Background" Value="#FF28A745"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="30,12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF34CE57"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF1E7E34"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <Style x:Key="PlayerCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FF383838"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <Style x:Key="CurrentPlayerCardStyle" TargetType="Border" BasedOn="{StaticResource PlayerCardStyle}">
            <Setter Property="Background" Value="#FF0E639C"/>
            <Setter Property="BorderBrush" Value="#FFFFD700"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header with title and controls -->
        <Border Grid.Row="0" 
                Background="#FF3E3E42" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Triominos" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               VerticalAlignment="Center"/>
                    
                    <!-- Current player indicator during gameplay -->
                    <TextBlock FontSize="18" 
                               Foreground="#FFFFD700" 
                               VerticalAlignment="Center"
                               Margin="20,0,0,0"
                               Visibility="{Binding IsPlayingPhase, Converter={StaticResource BoolToVis}}">
                        <TextBlock.Text>
                            <MultiBinding StringFormat=" - {0}'s Turn">
                                <Binding Path="CurrentPlayerName"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </StackPanel>
                
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right">
                    <Button Content="Rotate" 
                            Style="{StaticResource GameButtonStyle}"
                            Command="{Binding RotateCommand}"
                            Margin="5,0"
                            Visibility="{Binding IsPlayingPhase, Converter={StaticResource BoolToVis}}"/>
                    <Button Content="Clear Board" 
                            Style="{StaticResource GameButtonStyle}"
                            Command="{Binding ClearBoardCommand}"
                            Margin="5,0"/>
                    <Button Content="Reset Game" 
                            Style="{StaticResource GameButtonStyle}"
                            Command="{Binding ResetGameCommand}"
                            Margin="5,0"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <!-- Setup Phase Panel -->
            <Border Background="#FF252526" 
                    CornerRadius="10" 
                    Padding="40"
                    Visibility="{Binding IsSetupPhase, Converter={StaticResource BoolToVis}}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="New Game Setup" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    
                    <TextBlock Text="Number of Players:" 
                               FontSize="16" 
                               Foreground="#FF9CDCFE" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <RadioButton Content="1" 
                                     GroupName="PlayerCount" 
                                     Foreground="White" 
                                     FontSize="18"
                                     Margin="10,0"
                                     IsChecked="{Binding NumberOfPlayers, Converter={StaticResource NumberToRadioConverter}, ConverterParameter=1, Mode=TwoWay, FallbackValue=False}"/>
                        <RadioButton Content="2" 
                                     GroupName="PlayerCount" 
                                     Foreground="White" 
                                     FontSize="18"
                                     Margin="10,0"
                                     IsChecked="{Binding NumberOfPlayers, Converter={StaticResource NumberToRadioConverter}, ConverterParameter=2, Mode=TwoWay, FallbackValue=True}"/>
                        <RadioButton Content="3" 
                                     GroupName="PlayerCount" 
                                     Foreground="White" 
                                     FontSize="18"
                                     Margin="10,0"
                                     IsChecked="{Binding NumberOfPlayers, Converter={StaticResource NumberToRadioConverter}, ConverterParameter=3, Mode=TwoWay, FallbackValue=False}"/>
                        <RadioButton Content="4" 
                                     GroupName="PlayerCount" 
                                     Foreground="White" 
                                     FontSize="18"
                                     Margin="10,0"
                                     IsChecked="{Binding NumberOfPlayers, Converter={StaticResource NumberToRadioConverter}, ConverterParameter=4, Mode=TwoWay, FallbackValue=False}"/>
                    </StackPanel>
                    
                    <TextBlock Text="Each player will blindly receive 7 random pieces" 
                               FontSize="12" 
                               Foreground="#FF808080" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,30"/>
                    
                    <Button Content="Start Game" 
                            Style="{StaticResource StartButtonStyle}"
                            Command="{Binding StartGameCommand}"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <!-- Playing Phase Layout -->
            <Grid Visibility="{Binding IsPlayingPhase, Converter={StaticResource BoolToVis}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Game Board Area -->
                <Border Grid.Column="0" 
                        Background="#FF252526" 
                        CornerRadius="5" 
                        Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Game Board" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#FF9CDCFE" 
                                   Margin="0,0,0,10"/>
                        
                        <ScrollViewer Grid.Row="1" 
                                      HorizontalScrollBarVisibility="Auto" 
                                      VerticalScrollBarVisibility="Auto">
                            <controls:GameBoardControl 
                                GridRows="{Binding GridRows}"
                                GridCols="{Binding GridCols}"
                                CellSize="{Binding CellSize}"
                                PlacedPieces="{Binding PlacedPieces}"
                                ValidPlacements="{Binding ValidPlacements}"
                                HoveredPosition="{Binding HoveredPosition, Mode=TwoWay}"
                                CellClickCommand="{Binding PlacePieceCommand}"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
                
                <!-- Separator -->
                <GridSplitter Grid.Column="1" 
                              Width="5" 
                              Background="#FF3E3E42" 
                              Margin="5,0"/>
                
                <!-- Players Panel -->
                <Border Grid.Column="2" 
                        Background="#FF252526" 
                        CornerRadius="5" 
                        Padding="10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="Players" 
                                   FontSize="16" 
                                   FontWeight="SemiBold" 
                                   Foreground="#FF9CDCFE" 
                                   Margin="0,0,0,5"/>
                        
                        <TextBlock Grid.Row="1" 
                                   Text="{Binding SelectionHint}" 
                                   FontSize="11" 
                                   Foreground="#FF808080" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,10"/>
                        
                        <!-- Players List with Racks -->
                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Players}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="0,0,0,10"
                                                CornerRadius="5"
                                                Padding="10">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="#FF383838"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsCurrentPlayer}" Value="True">
                                                            <Setter Property="Background" Value="#FF0E639C"/>
                                                            <Setter Property="BorderBrush" Value="#FFFFD700"/>
                                                            <Setter Property="BorderThickness" Value="2"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            
                                            <StackPanel>
                                                <!-- Player Header -->
                                                <Grid Margin="0,0,0,8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Name}" 
                                                                   FontSize="14" 
                                                                   FontWeight="Bold" 
                                                                   Foreground="White"/>
                                                        <TextBlock Text=" *" 
                                                                   FontSize="14"
                                                                   Foreground="#FFFFD700"
                                                                   FontWeight="Bold"
                                                                   Visibility="{Binding IsCurrentPlayer, Converter={StaticResource BoolToVis}}"/>
                                                    </StackPanel>
                                                
                                                    <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Score, StringFormat='Score: {0}'}" 
                                                                   FontSize="12" 
                                                                   Foreground="#FFFFD700"
                                                                   Margin="0,0,10,0"/>
                                                        <TextBlock Text="{Binding PiecesRemaining, StringFormat='({0} pieces)'}" 
                                                                   FontSize="11" 
                                                                   Foreground="#FF808080"/>
                                                    </StackPanel>
                                                </Grid>
                                                
                                                <!-- Player's Rack (only visible for current player) -->
                                                <controls:PieceSelectorControl 
                                                    Pieces="{Binding RackPieces}"
                                                    SelectedPiece="{Binding DataContext.SelectedPiece, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    SelectCommand="{Binding DataContext.SelectPieceCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    DropToRackCommand="{Binding DataContext.AddSelectedToRackCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    PieceSize="45"
                                                    Visibility="{Binding IsCurrentPlayer, Converter={StaticResource BoolToVis}}"/>
                                                
                                                <!-- Hidden rack indicator for other players -->
                                                <TextBlock Text="[Pieces hidden]"
                                                           FontSize="11"
                                                           FontStyle="Italic"
                                                           Foreground="#FF606060"
                                                           HorizontalAlignment="Center"
                                                           Margin="0,5,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Visibility" Value="Visible"/>
                                                            <Setter Property="Foreground" Value="#FF606060"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsCurrentPlayer}" Value="True">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Setter Property="Foreground" Value="Transparent"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <!-- Pool Section Header -->
                        <Border Grid.Row="3" 
                                Background="#FF3E3E42" 
                                CornerRadius="5" 
                                Padding="8" 
                                Margin="0,10,0,5"
                                Visibility="{Binding HasDrawPile, Converter={StaticResource BoolToVis}}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Pool" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#FF9CDCFE"/>
                                <TextBlock Text="{Binding DrawPileCount, StringFormat=' ({0} pieces)'}" 
                                           FontSize="12" 
                                           Foreground="#FF808080" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Pool Pieces -->
                        <Border Grid.Row="4" 
                                Background="#FF2A2A2A" 
                                CornerRadius="5" 
                                Padding="5"
                                MaxHeight="200"
                                Visibility="{Binding HasDrawPile, Converter={StaticResource BoolToVis}}">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <controls:PieceSelectorControl 
                                    Pieces="{Binding DrawPilePieces}"
                                    SelectedPiece="{Binding SelectedPiece}"
                                    SelectCommand="{Binding SelectFromPoolCommand}"
                                    PieceSize="40"
                                    ShowNumbers="False"/>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
            
            <!-- Game Over Panel -->
            <Border Background="#FF252526" 
                    CornerRadius="10" 
                    Padding="40"
                    Visibility="{Binding IsGameOver, Converter={StaticResource BoolToVis}}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Game Over!" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Foreground="#FFFFD700" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontSize="18" 
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,30"/>
                    
                    <!-- Final Scores -->
                    <ItemsControl ItemsSource="{Binding Players}" HorizontalAlignment="Center" Margin="0,0,0,30">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,5">
                                    <TextBlock Text="{Binding Name}" 
                                               FontSize="16" 
                                               Foreground="White" 
                                               Width="100"/>
                                    <TextBlock Text="{Binding Score, StringFormat='{}{0} points'}" 
                                               FontSize="16" 
                                               Foreground="#FFFFD700"/>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <Button Content="Play Again" 
                            Style="{StaticResource StartButtonStyle}"
                            Command="{Binding ResetGameCommand}"
                            HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#FF3E3E42" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="{Binding StatusMessage}" 
                           Foreground="#FFDCDCAA" 
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="1" 
                           Text="{Binding DrawPileCount, StringFormat='Draw Pile: {0}'}" 
                           Foreground="#FF4EC9B0" 
                           Margin="20,0" 
                           VerticalAlignment="Center"
                           Visibility="{Binding IsPlayingPhase, Converter={StaticResource BoolToVis}}"/>
                
                <TextBlock Grid.Column="2" 
                           Text="{Binding Score, StringFormat='Total Score: {0}'}" 
                           Foreground="#FFFFD700" 
                           FontWeight="Bold"
                           Margin="20,0" 
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="3" 
                           Text="{Binding SelectedPieceText}" 
                           Foreground="#FF569CD6" 
                           Margin="20,0" 
                           VerticalAlignment="Center"/>
                
                <TextBlock Grid.Column="4" 
                           Text="{Binding PiecesPlacedCount, StringFormat='Pieces Placed: {0}'}" 
                           Foreground="#FF4EC9B0" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Floating piece that follows mouse when dragging -->
        <Canvas x:Name="DragCanvas" 
                Grid.RowSpan="3"
                IsHitTestVisible="False" 
                Panel.ZIndex="1000">
            <controls:TriominoControl x:Name="DragPiece"
                                       IsSelectable="False"
                                       PieceSize="50"
                                       Opacity="0.85"
                                       Visibility="Collapsed"/>
        </Canvas>
    </Grid>
</Window>
